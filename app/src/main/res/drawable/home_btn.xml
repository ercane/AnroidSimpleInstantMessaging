<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffffffff" />
            <stroke android:width="1dp" android:color="#ffffffff" />
            <corners android:radius="12dp" />

        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#1b04aaf7" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
<!--        <shape  android:textColor="#ffffff">
            <gradient android:angle="180" android:endColor="@android:color/transparent" android:startColor="@android:color/transparent"  />
            <stroke android:width="1dp" android:color="@android:color/transparent" />
            <corners android:radius="12dp" />
        </shape>-->
        <layer-list>
            <item android:right="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="@android:color/transparent" android:startColor="@android:color/transparent" />
                    <stroke android:width="1dp" android:color="@android:color/transparent" />
                    <corners android:radius="40dp" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>